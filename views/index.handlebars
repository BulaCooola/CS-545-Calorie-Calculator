        <section class="level-of-activity">
            <h2 class="example">Table of Activity Factors</h2>
            <table border="1">
                <thead>
                    <tr>
                        <th>Level of Activity</th>
                        <th>Example</th>
                        <th>Activity Factor</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Sedentary</td>
                        <td>Little to no exercise, such as a desk job with no additional physical activity</td>
