    <li><a href="/profile">Profile</a></li>
</ul>

{{#if error}}
<p class="error">{{error}}</p>
{{/if}}

<form id="login-form" action="/login" method="POST">
    <label for="emailAddressInput" id="emailAddress">Email Address:</label>
    <input type="email" id="emailAddressInput" name="emailAddress" required>

    <label for="passwordInput" id="password">Password:</label>
    <input type="password" id="passwordInput" name="password" required>

    <button type="submit">Submit</button>
</form>

<p>No account? <a href="/register">Click here to register!</a></p>

<script>validateFormLogin('login-form')</script>