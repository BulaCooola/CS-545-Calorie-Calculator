<section id="user-profile">
    <h2>My Profile Information</h2>
    <p><strong>Username:</strong> {{user.username}}</p>
    <p><strong>Email:</strong> {{user.email}}</p>
    <p><strong>Goal: </strong></p>
    <p><strong>BMR: </strong>{{BMR}}</p>
    <p><strong>Activity Factor: </strong>{{activtyFactor}}</p>
    <p><strong>Estimated Caloric Needs:</strong>{{caloricNeeds}}</p>
    <!-- Add more user-specific information here -->

    <h2>Edit Profile</h2>
    <form action="update_profile.html" method="POST">
        <label for="new-email">New Email:</label>
        <input type="email" id="new-email" name="new-email"><br>

        <label for="new-password">New Password:</label>
        <input type="password" id="new-password" name="new-password"><br>

        <input type="submit" value="Update Profile">
    </form>
</section>